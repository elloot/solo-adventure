    -var title = 'Solo√§ventyr - sida ' + story[0].id
    title #{title}
  else
    title Solo√§ventyr - den h√§r sidan finns inte

block content
  .bg-image-container
    .bg-image
  main
    .navbar-container
      nav.navbar
        h1.navbar__title
          a(href='./1') Flickan med svavelstickorna
    .sign-container
      .sign-board
        .story-container
          p.story= story[0] ? story[0].body : "Det ska vara en del av sagan h√§r men n√•got har uppenbarligen g√•tt fel ü§î"
